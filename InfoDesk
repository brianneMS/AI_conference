  <script>
    // Parse a lightweight dataset derived from the uploaded Info Desk Triage Guide.
    // For brevity we include a curated set of topics — in production this would be generated from the doc.
    const topics = [
      {id:'admissions',title:'Admissions Application',contact:'advisorsouth@seattlecolleges.edu | 206.934.5387',inPerson:'Refer to Welcome Center. For status/ctcLink ID, call Registration via chat.',template:`Hello,\n\nThanks for reaching out! To begin admissions, submit a free application and select an intended program. Visit the Admissions page for tips. If you want help, contact the Welcome Center:\nEmail: SouthWelcomeCenter@seattlecolleges.edu\nPhone: 206.934.7943\n\nBest,\n[Your Name]`},
      {id:'advising',title:'Advising',contact:'advisorsouth@seattlecolleges.edu | 206.934.5387',inPerson:'Schedule an advising appointment via the Advising Home Page. For quick questions, use drop-in hours.',template:`Hello,\n\nThank you for reaching out! Please schedule an advising appointment on our Advising Home Page by pressing "Schedule advising appointment". Advisors can review your program and available courses.\n\nWebsite: https://southseattle.edu/advising\nEmail: advisorsouth@seattlecolleges.edu\nPhone: 206.934.5387\n\nBest,\n[Your Name]`},
      {id:'financial',title:'Financial Aid & Funding',contact:'financialsouth@seattlecolleges.edu | 206.934.5317',inPerson:'Refer to Financial Aid; complete FAFSA or WASFA; refer to Benefits Hub for additional assistance.',template:`Hi,\n\nThanks for your question about funding. Start by completing the FAFSA (or WASFA if ineligible for federal aid). For workforce funding eligibility and other options, visit the Paying for College page or contact Benefits Hub.\n\nFinancial Aid: financialsouth@seattlecolleges.edu\nBenefits Hub: BenefitsHubSSC@seattlecolleges.edu\n\nBest,\n[Your Name]`},
      {id:'transcripts',title:'Transcripts & Evaluations',contact:'ssccregistration@seattlecolleges.edu',inPerson:'Order official transcripts via National Student Clearinghouse or direct senders; see Transcripts page.',template:`Hello,\n\nTo request official transcripts, order them through the National Student Clearinghouse or have previous institutions send directly to:\nSouth Seattle College\nAttn: Credential Evaluations RSB 045\n6000 16th Avenue SW\nSeattle, WA 98106\nOr email SEvaluations@seattlecolleges.edu\n\nProcessing may take 3-5 weeks during peak times.\n\nBest,\n[Your Name]`},
      {id:'idcard',title:'Student ID Cards',contact:'sscccashier@seattlecolleges.edu | 206.934.5388',inPerson:'Provide photo ID, be registered with tuition paid, pay $7.50 at Cashiers.',template:`Hello,\n\nStudent ID cards are processed at RSB Information Desk during open hours. Please be a currently registered student, have tuition & fees paid, provide a valid government photo ID, and pay $7.50 at the Cashiers office.\n\nBest,\n[Your Name]`}
    ];

    const contactsData = [
      {name:'Welcome Center',email:'SouthWelcomeCenter@seattlecolleges.edu',phone:'206.934.7943',hours:'Mon-Thurs 8-5'},
      {name:'Advising',email:'advisorsouth@seattlecolleges.edu',phone:'206.934.5387'},
      {name:'Financial Aid',email:'financialsouth@seattlecolleges.edu',phone:'206.934.5317'},
      {name:'Registration',email:'ssccregistration@seattlecolleges.edu',phone:'206.934.7938'}
    ];

    const topicsList = document.getElementById('topicsList');
    const results = document.getElementById('results');
    const topicContent = document.getElementById('topicContent');
    const topicMeta = document.getElementById('topicMeta');
    const contacts = document.getElementById('contacts');

    function renderTopics(filter=''){
      topicsList.innerHTML='';
      const f = filter.trim().toLowerCase();
      const list = topics.filter(t=>!f || (t.title.toLowerCase().includes(f) || t.template.toLowerCase().includes(f) || t.contact.toLowerCase().includes(f)));
      list.forEach(t=>{
        const div=document.createElement('div'); div.className='topic';
        div.innerHTML=`<div><h3>${t.title}</h3><div class='meta'>${t.contact}</div></div><div><button class='btn ghost' data-id='${t.id}'>Open</button></div>`;
        topicsList.appendChild(div);
      });
      if(list.length===0) topicsList.innerHTML='<div class="small">No topics found. Try another keyword.</div>';
      topicsList.querySelectorAll('button').forEach(b=>b.addEventListener('click',e=>openTopic(e.target.dataset.id)));
    }

    function openTopic(id){
      const t=topics.find(x=>x.id===id); if(!t) return;
      topicMeta.textContent=t.contact;
      topicContent.innerHTML=`<h3 style="margin:0">${t.title}</h3><p class='small' style='margin-top:6px'><strong>In-person:</strong> ${t.inPerson}</p><div style='margin-top:8px'><label>Email Template</label><pre id='tmpl'>${t.template}</pre><div style='display:flex;gap:8px;margin-top:8px'><button class='btn' id='copyBtn'>Copy</button><button class='btn ghost' id='sendBtn'>Send Mail</button></div></div>`;
      document.getElementById('copyBtn').addEventListener('click',()=>{copyToClipboard(t.template);alert('Template copied to clipboard');});
      document.getElementById('sendBtn').addEventListener('click',()=>{const body=encodeURIComponent(t.template);location.href='mailto:'+encodeURIComponent(t.contact.split('|')[0].trim())+'?subject='+encodeURIComponent(t.title+' inquiry')+'&body='+body;});
    }

    function copyToClipboard(text){navigator.clipboard.writeText(text).catch(()=>{const ta=document.createElement('textarea');ta.value=text;document.body.appendChild(ta);ta.select();document.execCommand('copy');ta.remove();});}

    // Search
    document.getElementById('q').addEventListener('input',e=>{const v=e.target.value; renderTopics(v); results.innerHTML=''; if(v.trim()) results.innerHTML=`<div class='small'>Showing topics matching "${v}"</div>`; });

    // Show all templates
    document.getElementById('showAll').addEventListener('click',()=>{
      topicMeta.textContent='All templates';
      topicContent.innerHTML='';
      topics.forEach(t=>{ const el=document.createElement('div'); el.innerHTML=`<h4>${t.title}</h4><pre>${t.template}</pre><div style='margin-bottom:10px'><button class='btn ghost' data-id='${t.id}'>Open</button> <button class='copy' data-tmpl='${encodeURIComponent(t.template)}'>Copy</button></div>`; topicContent.appendChild(el); });
      topicContent.querySelectorAll('.copy').forEach(b=>b.addEventListener('click',e=>{copyToClipboard(decodeURIComponent(e.target.dataset.tmpl));alert('Copied');}));
    });

    // Contacts render
    function renderContacts(){ contacts.innerHTML=''; contactsData.forEach(c=>{ const d=document.createElement('div'); d.style.marginBottom='8px'; d.innerHTML=`<div><strong>${c.name}</strong><div class='small'>${c.email}${c.phone? ' • '+c.phone: ''}</div></div>`; contacts.appendChild(d); }); }

    // Print & export
    document.getElementById('printBtn').addEventListener('click',()=>window.print());
    document.getElementById('exportCSV').addEventListener('click',()=>{
      const rows=['title,contact,template']; topics.forEach(t=>rows.push(`"${t.title.replace(/"/g,'""')}","${t.contact}","${t.template.replace(/"/g,'""')}"`));
      const blob=new Blob([rows.join('\n')],{type:'text/csv'});
      const url=URL.createObjectURL(blob); const a=document.createElement('a'); a.href=url; a.download='info-desk-templates.csv'; a.click(); URL.revokeObjectURL(url);
    });

    // Copy selected template -> picks first visible template in panel
    document.getElementById('copyAll').addEventListener('click',()=>{
      const pre=document.querySelector('#topicContent pre'); if(!pre) return alert('No template selected'); copyToClipboard(pre.textContent); alert('Template copied');
    });

    document.getElementById('openMail').addEventListener('click',()=>{
      const pre=document.querySelector('#topicContent pre'); if(!pre) return alert('No template selected'); const to=document.getElementById('topicMeta').textContent.split('|')[0].trim(); location.href='mailto:'+encodeURIComponent(to)+'?subject=Info+Desk+Assistance&body='+encodeURIComponent(pre.textContent);
    });

    // Init
    renderTopics(); renderContacts();

    // Keyboard accessibility: Enter on topic open
    document.addEventListener('keydown',e=>{ if(e.key==='/' && document.activeElement.tagName!=='INPUT'){ e.preventDefault(); document.getElementById('q').focus(); } });
  </script>
</body>
